<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/modify-role.css" >
    <title>Modify Channel</title>
</head>
<body>
    <div><a href="/dashboard/<%=guildId%>/guild-menu" class="go-back">Go Back</a></div>
    <div>
        <form action="" class="presentational-form">
            <label for="name">Name</label>
            <input type="text" id="role-name" name="name" value="<%=role.name%>" disabled>
            <label for="permissions">Permissions</label>
            <input type="text" id="role-permissions" name="permissions" value="<%=role.permissions%>" disabled>
            <label for="color">Color</label>
            <input type="number" id="role-color" name="color" value="<%=role.color%>" disabled>
            <label for="hoist">Hoist</label>
            <input type="text" id="role-hoist" name="hoist" value="<%=role.hoist%>" disabled>
            <label for="mentionable">Mentionable</label>
            <input type="text" id="role-mentionable" name="mentionable" value="<%=role.mentionable%>" disabled>
        </form>
    </div>
    <div>
        <form action="/dashboard/<%= guildId %>/roles/<%= role.id %>?_method=PATCH" method="post" class="modification-form">
            <input type="hidden" name="_method" value="PATCH">
            <label for="name">Name</label>
            <input type="text" id="role-name" name="name" value="<%=role.name%>">
            <label for="permissions">Permissions</label>
            <input type="text" id="role-permissions" name="permissions" value="<%=role.permissions%>">
            <label for="color">Color</label>
            <input type="number" id="role-color" name="color" value="<%=role.color%>">
            <label for="hoist">Hoist</label>
            <input type="text" id="role-hoist" name="hoist" value="<%=role.hoist%>">
            <label for="mentionable">Mentionable</label>
            <input type="text" id="role-mentionable" name="mentionable" value="<%=role.mentionable%>">
            <button type="submit">Modify</button>
        </form>
    </div>
</body>
</html>